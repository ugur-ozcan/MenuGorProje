@model MenuGor.Web.ViewModels.Admin.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Toplam Admin Sayısı</h5>
                <p class="card-text">@Model.TotalAdminCount</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h3>Hızlı İşlemler</h3>
    <ul>
        <li><a asp-action="Create" asp-controller="Admin">Yeni Admin Ekle</a></li>
        <li><a asp-action="Index" asp-controller="Company">Firmaları Yönet</a></li>
        <li><a asp-action="Index" asp-controller="Branch">Şubeleri Yönet</a></li>
    </ul>
</div>